<div class="box box-primary">
    <div class="box-body">
        <form action="~/Account/ChangePassword" method="post">
            <div class="form-group">
                <label>Mật khẩu cũ:</label>
                <input autofocus type="password" class="form-control" name="oldPassword">
                @*@Html.TextBoxFor(m => m.CustomerName, new {@class="form-control", @autofocus="true"})*@
                @Html.ValidationMessage(nameof(Model.CustomerName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Mật khẩu mới:</label>
                <input type="password" class="form-control" name="newPassword">
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
            </div>
            <div style="color: #f00">@ViewBag.error</div>
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>
                <a href="" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

