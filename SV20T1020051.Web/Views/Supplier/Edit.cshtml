@model SV20T1020051.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input autofocus type="text" class="form-control" name="SupplierName" value="@Model.SupplierName">
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label for="pwd">Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label for="pwd">Số điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label for="pwd">Email:</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label for="pwd">Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
                @Html.ValidationMessage(nameof(Model.Address), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label for="pwd">Tỉnh thành:</label>
                @*<select name="Provice" class="form-control">
                @foreach (var item in CommonDataService.ListOfProvinces())
                    if (item.ProvinceName == Model.Provice)
                    {
                        <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                    }
                    else
                    {
                        <option value="@item.ProvinceName">@item.ProvinceName</option>
                    }
            </select>*@
                @Html.DropDownListFor(m => m.Provice, SelectListHelper.Provinces(), new { @class = "form-control select2" })
                @Html.ValidationMessage(nameof(Model.Provice), new { @style = "color:#f00" })
            </div>
            <div>
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>
            @*Button action*@
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>
                <a href="~/Supplier" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

