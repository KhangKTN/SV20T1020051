@model SV20T1020051.DomainModels.Supplier
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Xoá nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body">
        <form method="post" action="~/Supplier/Delete/@Model.SupplierID">
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <p class="form-control-static">@Model.SupplierName</p>
            </div>
            <div class="form-group">
                <label for="pwd">Tên giao dịch:</label>
                <p class="form-control-static">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label for="pwd">Số điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label for="pwd">Email:</label>
                <p class="form-control-static">@Model.Email</p>
            </div>
            <div class="form-group">
                <label for="pwd">Địa chỉ:</label>
                <p class="form-control-static">@Model.Address</p>
            </div>
            <div class="form-group">
                <label for="pwd">Tỉnh thành:</label>
                <p class="form-control-static">@Model.Provice</p>
            </div>
            @*Button action*@
        <div class="form-group text-right">
            @if (ViewBag.allowDelete)
            {
                <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i> Xác nhận xoá</button>
            }
            <a href="~/Supplier" class="btn btn-default">Quay lại</a>
        </div>
        </form>
    </div>
</div>

