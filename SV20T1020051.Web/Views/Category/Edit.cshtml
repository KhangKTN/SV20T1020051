@model SV20T1020051.DomainModels.Category

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="CategoryID" value="@Model.CategoryID" />
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input autofocus type="text" class="form-control" name="CategoryName" value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label for="pwd">Mô tả:</label>
                <input type="text" class="form-control" name="Description" value="@Model.Description">
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/images/categories/@(string.IsNullOrWhiteSpace(Model.Photo) ? "nophoto.jpeg" : Model.Photo)" class="img img-bordered" style="width:200px" />
                </div>
            </div>
            @*Button action*@
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

