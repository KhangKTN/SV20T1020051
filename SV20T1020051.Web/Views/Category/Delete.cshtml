@model SV20T1020051.DomainModels.Category

@{
    ViewBag.Title = "Xoá loại hàng";
}


<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <p class="form-control-static">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label for="pwd">Mô tả:</label>
                <p class="form-control-static">@Model.Description</p>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>

            </div>

            <div class="form-group">
                <div class="col-sm-4">
                    <img class="profile-user-img img-responsive img-bordered" src="~/images/categories/@(string.IsNullOrWhiteSpace(Model.Photo) ? "nophoto.jpeg" : Model.Photo)">
                </div>
            </div>
            @*Button action*@
            <div class="form-group text-right">
                @if (ViewBag.allowDelete)
                {
                    <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i> Xác nhận xoá</button>
                }
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>