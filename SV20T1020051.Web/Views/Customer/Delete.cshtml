@model SV20T1020051.DomainModels.Customer
@{
    ViewBag.Title = "Xoá khách hàng";
}

<div class="box box-primary">
    <div class="box-body">
        <form method="post" action="~/Customer/Delete/@Model.CustomerID">
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <p class="form-control-static">@Model.CustomerName</p>
            </div>
            <div class="form-group">
                <label for="pwd">Tên giao dịch:</label>
                <p class="form-control-static">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label for="pwd">Số điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label for="pwd">Email:</label>
                <p class="form-control-static">@Model.Email</p>
            </div>
            <div class="form-group">
                <label for="pwd">Địa chỉ:</label>
                <p class="form-control-static">@Model.Address</p>
            </div>
            <div class="form-group">
                <label for="pwd">Tỉnh thành:</label>
                <p class="form-control-static">@Model.Province</p>
            </div>
            <div class="form-group">
                <label for="pwd">Trạng thái:</label>
                <p class="form-control-static">@(Model.IsLocked ? "Đã khoá" : "Đang hoạt động")</p>
            </div>

            @*Button action*@
            <div class="form-group text-right">
                @if (ViewBag.allowDelete)
                {
                    <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i> Xác nhận xoá</button>
                }

                <a href="~/Customer" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>
