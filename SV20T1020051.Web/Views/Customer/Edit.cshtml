<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer/Save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID"/>
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <input autofocus type="text" class="form-control" name="CustomerName" value="@Model.CustomerName">
                @*@Html.TextBoxFor(m => m.CustomerName, new {@class="form-control", @autofocus="true"})*@
                @Html.ValidationMessage(nameof(Model.CustomerName), new {@style = "color:#f00"})
