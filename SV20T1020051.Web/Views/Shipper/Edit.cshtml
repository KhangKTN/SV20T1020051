@model SV20T1020051.DomainModels.Shipper

@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Tên shipper:</label>
                <input autofocus type="text" class="form-control" name="ShipperName" value="@Model.ShipperName">
                @Html.ValidationMessage(nameof(Model.ShipperName), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label for="pwd">Số điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
            </div>
            @*Button action*@
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit"><i class="fa fa-trash"></i> Lưu dữ liệu</button>
                <a href="~/Shipper" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

