@model ShipperSearchResult
@{
    Layout = null;
}

<div class="">
    <p style="margin: 10px 0 10px 20px">Có <strong>@Model.RowCount</strong> người giao hàng trong <strong>@Model.PageCount</strong> trang</p>
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="bg-info">
                    <th>Tên người giao hàng</th>
                    <th>Điện thoại</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Data)
                {
                    <tr>
                        <td>@item.ShipperName</td>
                        <td>@item.Phone</td>
                        <td style="width:80px">
                            <a href="~/Shipper/Edit/@item.ShipperID" class="btn btn-xs btn-info">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Shipper/Delete/@item.ShipperID" class="btn btn-xs btn-danger">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="text-center">
        <ul class="pagination">
            @for (int p = 1; p <= Model.PageCount; p++)
            {
                if (p == Model.Page)
                {
                    <li class="active"><a href="#">@p</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="doSearch( '#formSearch', @p)">@p</a></li>
                }
            }
        </ul>
    </div>
</div>

