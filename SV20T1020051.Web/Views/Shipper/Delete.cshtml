@model SV20T1020051.DomainModels.Shipper
@{
    ViewBag.Title = "Xoá shipper";
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên shipper:</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label for="pwd">Số điện thoại:</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>
            @*Button action*@
        <div class="form-group text-right">
            @if (ViewBag.allowDelete)
            {
                <button class="btn btn-danger" type="submit"><i class="fa fa-trash"></i> Xác nhận xoá</button>
            }
            <a href="~/Shipper" class="btn btn-default">Quay lại</a>
        </div>
        </form>
    </div>
</div>

