@{
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            <div class="form-group">
                <label>Person Name:</label>
                <input autofocus type="text" class="form-control" name="Name" value="@Model.Name">
            </div>
            <div class="form-group">
                <label for="pwd">BirthDate:</label>
                <input type="hidden" class="form-control date-picker" name="BirthDate" value="@Model.BirthDate">
                <input type="text" class="form-control date-picker" name="BirthDateInput" value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo(""))">
            </div>
            <div class="form-group">
                <label for="pwd">Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>
            @*Button action*@
            <div class="form-group text-right">
                <button class="btn btn-info" type="submit"><i class="fa fa-floppy-o"></i> Lưu dữ liệu</button>
                <a href="~/Category" class="btn btn-default">Quay lại</a>
            </div>
        </form>
    </div>
</div>

