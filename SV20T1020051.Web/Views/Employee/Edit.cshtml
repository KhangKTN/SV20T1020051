@model SV20T1020051.DomainModels.Employee
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Employee/Save">
            <input type="hidden" name="EmployeeID" value="@Model.EmployeeID" />
            <div class="form-group">
                <label class="control-label col-sm-2">Họ và tên:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="FullName" value="@Model.FullName" autofocus />
                    @Html.ValidationMessage(nameof(Model.FullName), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ngày sinh:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="BirthDate" value="@Model.BirthDate" />
                    <input type="text" name="BirthDateInput" class="form-control date-picker" value="@Model.BirthDate.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))"/>
                    @Html.ValidationMessage(nameof(Model.BirthDate), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Địa chỉ:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Address" value="@Model.Address" />
                    @Html.ValidationMessage(nameof(Model.Address), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Điện thoại:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone" />
                    @Html.ValidationMessage(nameof(Model.Phone), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Email:</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="Email" value="@Model.Email" />
                    @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                @*<div class="col-lg-offset-2">*@
                <label class="control-label col-sm-2">Trạng thái:</label>
                <div class="form-group col-sm-10">
                    <label class="radio-inline"><input type="radio" name="IsWorking" value="true" @(Model.IsWorking ? "checked" : "")>Đang làm việc</label>
                    <label class="radio-inline"><input type="radio" name="IsWorking" value="false" @(Model.IsWorking ? "" : "checked")>Đã nghỉ việc</label>
                </div>
                @*<div class="checkbox">
                @if (Model.IsWorking)
                {
                    <label>
                        <input type="checkbox" checked name="IsWorking" value=1 />Nhân viên đang làm việc
                    </label>
                }
                else
                {
                    <label>
                        <input type="checkbox" name="IsWorking" value=0 /> Nhân viên đang làm việc
                    </label>
                }
        </div>*@
                @*</div>*@
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh cá nhân:</label>
                <div class="col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <img id="Photo" src="~/images/employees/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Employee" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>