@model SV20T1020051.DomainModels.ProductPhoto
@{
}


<div class="box-body">
    <form class="form-horizontal" action="~/Product/Photo/@Model.ProductID?method=save" method="post" enctype="multipart/form-data">
        <input type="hidden" name="PhotoID" value="@Model.PhotoID" />
        <input type="hidden" name="ProductID" value="@Model.ProductID" />
        <div class="form-group">
            <label class="control-label col-sm-2">Ảnh sản phẩm:</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                       onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-sm-10">
                <input type="hidden" name="Photo" value="@Model.Photo" />
                <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Mô tả</label>
            <div class="col-sm-10">
                <input placeholder="Nhập mô tả cho hình ảnh mặt hàng" type="text" class="form-control" name="Description" value="@Model.Description">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
            <div class="col-sm-10">
                <input placeholder="Nhập thứ tự hiển thị ảnh" type="number" class="form-control" name="DisplayOrder" value="@Model.DisplayOrder">
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-sm-10">
                <div class="checkbox">
                    <label><input type="checkbox" checked name="IsHidden">Có hiển thị ảnh</label>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-save"></i> Lưu dữ liệu
                </button>
                <a class="btn btn-default" href="~/Product/Edit/@Model.ProductID">
                    Quay lại
                </a>
            </div>
        </div>
    </form>
</div>


